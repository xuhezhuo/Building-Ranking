.container{
    background: linear-gradient(to bottom, #274b7c, #2c3344); /* 标准的语法 */
}

.nav {
  position: relative;
  overflow-y: auto;
}

.category {
  padding-top: 27rpx;
  padding-bottom: 27rpx;
  font-size: 30rpx;
  transition: 0.3s;
  /* font-weight: 300;  */
  background-color: #3e5b82;
  color: #fff;
  position: relative;
}

.category.active {
  font-size: 34rpx;
  font-weight: 400;
  background: transparent;
}

.border {
  width: 8rpx;
  height: 72rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 15rpx;
  transition: 0.2s;
  border-radius: 12rpx;
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.section {
  padding: 12rpx;
  position: relative;
}

.item {
  padding: 8rpx;
  display: inline-block;
  height: 69rpx;
  line-height: 69rpx;
  margin-top: 12rpx;
}

.city {
  background-color: #3e5b82;
  color: #fff;
  border-radius: 12rpx;
  font-size: 29rpx;
  transition: .1s;
}

.city.active {
  background-color: #FFF;
  color: #000;
}

.btn{
  color: #fff;
  background-color: #f09e47;
  position: absolute;
  bottom: 32rpx;
  right: 20%;
  display: unset;
  padding: 27rpx 120rpx;
  font-size: 36rpx;
  line-height: 1;
  border-radius: 31rpx;
}
